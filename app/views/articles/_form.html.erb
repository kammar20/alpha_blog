<div class="container">

  
  <div class="row justify-content-center">
    <div class="col-10">
      <%= render "shared/errors" %>
      <%= form_tag form_path, class: "shadow p-3 mb-3 bg-info rounded", method:
      form_method do %>
      <div class="form-group row">
        <%= label_tag :title, "Title", class: "col-2 col-form-label text-light" %>
        <div class="col-10">
          <%= text_field_tag :title, @article&.title || params[:title], class:
          "form-control shadow rounded", placeholder: "Title of article" %>
        </div>
      </div>

      <div class="form-group row">
        <%= label_tag :description, "Description", class: "col-2 col-form-label text-light"
        %>
        <div class="col-10">
          <%= text_area_tag :description, @article&.description ||
          params[:description], class: "form-control shadow rounded ", rows:10,
          placeholder: "Description of article" %>
        </div>
      </div>

      <div class="form-group row justify-content-center">
        <%= submit_tag submit_label, class: "btn btn-outline-light btn-lg" %>
      </div>
      <% end %>
    </div>

    <p>
      <%= link_to "[ Cancle and return to articles listing ]", articles_path, class: "text-info" %>
    </p>
  </div>
</div>
