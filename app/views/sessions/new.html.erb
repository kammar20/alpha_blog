<h1 class="text-center mt-4">Log in</h1>

<div class="container">
    <div class="row justify-content-center">
      <div class="col-10">
        <%= form_tag login_path, { scope: :session, class: "shadow p-3 mb-3 bg-info rounded", method: :post } do %>
  
        <div class="form-group row">
          <%= label_tag :email, "Email", class: "col-2 col-form-label text-light"
          %>
          <div class="col-10">
            <%= email_field_tag :email,nil, class:
            "form-control shadow rounded", placeholder: "Enter email" %>
          </div>
        </div>
  
        <div class="form-group row">
          <%= label_tag :password, "Password", class: "col-2 col-form-label
          text-light" %>
          <div class="col-10">
            <%= password_field_tag :password, nil, class: "form-control shadow
            rounded", placeholder: "Enter your password" %>
          </div>
        </div>
  
        <div class="form-group row justify-content-center">
          <%= submit_tag "login", class: "btn btn-outline-light btn-lg" %>
        </div>
  
        <% end %>
  <div class="text-center">
      <p>
          <%= link_to "[ Cancel and return to homepage ]", root_path, class:
          "text-info" %>
        </p>
    </div>
      </div>
    </div>
  </div>
  
  