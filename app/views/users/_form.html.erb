<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= render "shared/errors", obj: @user %> 
      <%= form_tag form_path, class: "shadow p-3 mb-3 bg-info rounded", method: form_method do %>

      <div class="form-group row">
        <%= label_tag :username, "Username", class: "col-2 col-form-label
        text-light" %>
        <div class="col-10">
          <%= text_field_tag :username, @user&.username || params[:username],
          class: "form-control shadow rounded", placeholder: "Enter username" %>
        </div>
      </div>

      <div class="form-group row">
        <%= label_tag :email, "Email", class: "col-2 col-form-label text-light"
        %>
        <div class="col-10">
          <%= email_field_tag :email, @user&.email || params[:email], class:
          "form-control shadow rounded", placeholder: "Enter email" %>
        </div>
      </div>

      <div class="form-group row">
        <%= label_tag :password, "Password", class: "col-2 col-form-label
        text-light" %>
        <div class="col-10">
          <%= password_field_tag :password, nil, class: "form-control shadow
          rounded", placeholder: "Enter password" %>
        </div>
      </div>

      <div class="form-group row justify-content-center">
        <%= submit_tag submit_label, class: "btn btn-outline-light btn-lg" %>
      </div>

      <% end %>

      <p>
        <%= link_to "[ Cancel and return to homepage ]", root_path, class:
        "text-info" %>
      </p>
    </div>
  </div>
</div>
